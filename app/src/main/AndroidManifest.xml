<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aause2s15.gruppe3.cheatingandroid" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateMatchActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_create_match"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aause2s15.gruppe3.cheatingandroid.MainActivity" />
        </activity>
        <activity
            android:name=".JoinMatchActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_join_match"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aause2s15.gruppe3.cheatingandroid.MainActivity" />
        </activity>
        <activity
            android:name=".RulesActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_rules"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aause2s15.gruppe3.cheatingandroid.MainActivity" />
        </activity>
        <activity
            android:name=".TestMatchActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_test_match"
            android:parentActivityName=".CreateMatchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aause2s15.gruppe3.cheatingandroid.CreateMatchActivity" />
        </activity>
    </application>

</manifest>
